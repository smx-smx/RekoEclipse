<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="rekoeclipse.plugin.Application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="rekoeclipse.plugin.Application">
         </run>
      </application>
   </extension>
   <extension
         id="RekoEclipse"
         name="Reko Decompiler"
         point="org.eclipse.core.runtime.products">
      <product
            application="rekoeclipse.plugin.Application"
            name="Reko Decompiler">
         <property
               name="applicationXMI"
               value="RekoEclipse.plugin/Application.e4xmi">
         </property>
         <property
               name="appName"
               value="RekoEclipse">
         </property>
      </product>
   </extension>

</plugin>
